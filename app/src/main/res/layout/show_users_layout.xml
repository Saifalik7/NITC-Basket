<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:elevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:padding="10dp"
        android:background="#f0f8ff">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_baseline_account_circle_24"
            android:id="@+id/users_img"
            />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:id="@+id/show_users_name"
            android:layout_toRightOf="@+id/users_img"
            android:text="Name"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:padding="5dp"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_width="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:id="@+id/show_users_email"
            android:text="Email"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:padding="5dp"
            android:layout_below="@id/show_users_name"
            android:layout_toRightOf="@+id/users_img"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:id="@+id/show_users_status"
            android:text="Status"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:padding="5dp"
            android:layout_below="@id/show_users_email"
            android:layout_toRightOf="@+id/users_img"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_height="wrap_content"
            android:layout_width="100dp"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:textStyle="bold"
            android:layout_below="@id/users_img"
            android:id="@+id/edit_block_user"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:background="#FF018786"
            android:text="Block"
            android:textSize="15dp"
            android:textColor="@color/white"

            />


    </RelativeLayout>

</androidx.cardview.widget.CardView>