<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:elevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="#f0f8ff">

        <TextView
            android:layout_width="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:id="@+id/Historyorder_id"
            android:text="Order Id"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:padding="5dp"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_width="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:id="@+id/Historyorder_total_price"
            android:text="Total Price"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:padding="5dp"
            android:layout_below="@id/Historyorder_id"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:id="@+id/Historyorder_status"
            android:text="Status"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:padding="5dp"
            android:layout_below="@id/Historyorder_total_price"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:id="@+id/Historyorder_date"
            android:text="Date"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:padding="5dp"
            android:layout_below="@id/Historyorder_status"
            android:layout_height="wrap_content"/>



    </RelativeLayout>

</androidx.cardview.widget.CardView>